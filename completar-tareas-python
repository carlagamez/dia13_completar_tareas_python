        "def mostrar_tareas():\n",
        "    try:\n",
        "        with open(\"tareas.txt\", \"r\") as archivo:\n",
        "            lineas = archivo.readlines()\n",
        "\n",
        "            if len(lineas) == 0:\n",
        "                print(\"No hay tareas.\")\n",
        "            else:\n",
        "                print(\"\\nðŸ“‹ Lista de tareas:\")\n",
        "                for i, linea in enumerate(lineas, start=1):\n",
        "                    print(i, \"-\", linea.strip())\n",
        "\n",
        "    except FileNotFoundError:\n",
        "        print(\"No hay archivo de tareas.\")"
      ],
